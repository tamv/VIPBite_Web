<div class="whiteBG">
	<div class="container">
		<div class="row">
			<div class="col-md-7">
				<h1>Forgot your password</h1>
			</div>
			<div class="col-md-5">
				<div class="searchBG">
					<h2>Not a member? <a href="register.html">Register Here!</a></h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-md-7">
				<%= form_tag ({:controller => 'user', :action => 'recovery', :method => "post"}), ({:id => 'recoveryForm'}) do %>
						<%= email_field_tag('email', params[:email] || nil, maxlength: 30, size: 30,
											:class=>"registrationInput", placeholder: "Email Address", required: "required") %>
						<%= submit_tag('submit', :class=>"submit") %>
				<% end %>
			</div>
			<div class="col-md-5">
				<div class="sideBar">
					<h2>How it Work</h2>
					<ul>
						<li>Eat at one of many VIPbite partner restaurants</li>
						<li>Book your table & save big by being a VIPbite member</li>
						<li>Enjoy your meal, show your VIPbite app, get your discount!</li>
					</ul>
				</div>
			</div>
		</div>
</div>
<script>
	$(window).bind("load", function() {
			$(window).resize(function () {
				$("#gmContainer").height($("#restaurantSearch").height())
			})
			$("#howItWork").hide();
			$("#staticHeader").addClass("subHead");
			initialize_withLoc()
		})
</script>